@model FlightDetails

@{
    ViewData["Title"] = "Delete Flight";
}

<h2>Are you sure you want to delete this flight?</h2>

<div>
    <h4>Flight</h4>
    <dl class="row">
        <dt class="col-sm-2">Adults</dt>
        <dd class="col-sm-10">@Model.Adults</dd>

        <dt class="col-sm-2">Currency</dt>
        <dd class="col-sm-10">@Model.Currency</dd>

        <dt class="col-sm-2">Locale</dt>
        <dd class="col-sm-10">@Model.Locale</dd>

        <dt class="col-sm-2">Market</dt>
        <dd class="col-sm-10">@Model.Market</dd>

        <dt class="col-sm-2">Cabin Class</dt>
        <dd class="col-sm-10">@Model.CabinClass</dd>

        <dt class="col-sm-2">Country Code</dt>
        <dd class="col-sm-10">@Model.CountryCode</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>