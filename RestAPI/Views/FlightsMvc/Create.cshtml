@model FlightDetails

@{
    ViewData["Title"] = "Create Flight";
}

<h2>Create New Flight</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Adults"></label>
        <input asp-for="Adults" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Currency"></label>
        <input asp-for="Currency" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Locale"></label>
        <input asp-for="Locale" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Market"></label>
        <input asp-for="Market" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CabinClass"></label>
        <input asp-for="CabinClass" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CountryCode"></label>
        <input asp-for="CountryCode" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>